<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrayKeeper.Views.SalesPage"
             Title="Sales"
             BackgroundColor="#000000">
    <ContentPage.Content>
        <!--<Grid Padding="10" RowDefinitions="*,Auto,*">-->
        <StackLayout Padding="10" Spacing="20">
                
                <!-- Page Title -->
                <Label Text="Sales Report" 
                       FontSize="24" 
                       FontAttributes="Bold" 
                       TextColor="#D5F8B0" 
                       HorizontalOptions="Center" />

                <!-- Sales ListView -->
                <Frame  BackgroundColor="#303030" CornerRadius="12" HasShadow="True">
                    <ListView x:Name="SalesListView"
                              ItemsSource="{Binding SalesDetails}" 
                              BackgroundColor="Transparent"
                              SeparatorVisibility="None">
                        <ListView.Header>
                            <StackLayout Orientation="Horizontal" Padding="10" BackgroundColor="#404040">
                                <Label Text="#" TextColor="#FFFFFF" FontAttributes="Bold" WidthRequest="30" />
                                <Label Text="Trays Sold" TextColor="#FFFFFF" FontAttributes="Bold" WidthRequest="40" />
                                <Label Text="Revenue" TextColor="#FFFFFF" FontAttributes="Bold" WidthRequest="70" />
                                <Label Text="Profit/Loss" TextColor="#FFFFFF" FontAttributes="Bold" WidthRequest="80" />
                                <Label Text="Trays Left" TextColor="#FFFFFF" FontAttributes="Bold" WidthRequest="45" />
                                <Label Text="Trays Broken" TextColor="#FFFFFF" FontAttributes="Bold" WidthRequest="50" />
                            </StackLayout>
                        </ListView.Header>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <StackLayout Orientation="Horizontal" Padding="10" Spacing="10" BackgroundColor="#303030">
                                        <Label Text="{Binding Id}" TextColor="#FFFFFF" WidthRequest="20" />
                                        <Label Text="{Binding NumberOfTraysSold}" TextColor="#FFFFFF" WidthRequest="35" />
                                        <Label Text="{Binding Revenue, StringFormat='R{0:F2}'}" TextColor="#00FF00" WidthRequest="60" />
                                        <Label Text="{Binding ProfitLoss, StringFormat='R{0:F2}'}" TextColor="#FFFFFF" WidthRequest="70" />
                                        <Label Text="{Binding NumberOfTraysLeft}" TextColor="#FFFFFF" WidthRequest="45" />
                                        <Label Text="{Binding NumberOfTraysBroken}" TextColor="#FF0000" WidthRequest="50" />
                                    </StackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.Footer>
                            <StackLayout Orientation="Horizontal" Padding="10" BackgroundColor="#404040">
                                <Label Text="Î£" TextColor="#FFFFFF" FontAttributes="Bold" WidthRequest="25" />
                                <Label Text="{Binding TotalTraysSold}" TextColor="#FFFFFF" FontAttributes="Bold" WidthRequest="50" />
                                <Label Text="{Binding TotalRevenue, StringFormat='R{0:F2}'}" TextColor="#00FF00" WidthRequest="70" />
                                <Label Text="{Binding TotalProfitLoss, StringFormat='R{0:F2}'}" TextColor="#FFFFFF" WidthRequest="80" />
                                <Label Text="{Binding TotalTraysLeft}" TextColor="#FFFFFF" FontAttributes="Bold" WidthRequest="55" />
                                <Label Text="{Binding TotalTraysBroken}" TextColor="#FF0000" FontAttributes="Bold" WidthRequest="50" />
                            </StackLayout>
                        </ListView.Footer>
                    </ListView>
                </Frame>

                <!-- Action Buttons -->
                <StackLayout Spacing="10">
                    
                    <!--<Button Text="Generate Sales Report"
                            Command="{Binding GenerateSalesReportCommand}"
                            TextColor="#FFFFFF" 
                            BackgroundColor="#D5F8B020" 
                            CornerRadius="25" 
                            HeightRequest="50" 
                            FontSize="16" 
                            FontAttributes="Bold" />-->

                    <Button Text="Export to Excel"
                            Command="{Binding ExportToExcelCommand}"
                            TextColor="#FFFFFF" 
                            BackgroundColor="#D5F8B020" 
                            CornerRadius="25" 
                            HeightRequest="50" 
                            FontSize="16" 
                            FontAttributes="Bold" />

                    <Button Text="Export to PDF"
                            Command="{Binding ExportToPdfCommand}"
                            TextColor="#FFFFFF" 
                            BackgroundColor="#D5F8B020" 
                            CornerRadius="25" 
                            HeightRequest="50" 
                            FontSize="16" 
                            FontAttributes="Bold" />
         
                </StackLayout>
            </StackLayout>
        <!--</Grid>-->
    </ContentPage.Content>
</ContentPage>

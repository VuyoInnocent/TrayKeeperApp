<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrayKeeper.Views.InventoryPage"
             Title="Inventory"
             BackgroundColor="#000000">
    <ContentPage.Content>
        <Grid Padding="20" RowDefinitions="*,Auto,*">
            <StackLayout Grid.Row="1" Spacing="20">
                
                <Label Text="Inventory Management" 
                       FontSize="24" 
                       FontAttributes="Bold" 
                       TextColor="#D5F8B0" 
                       HorizontalOptions="Center" />

                <!-- ListView -->
                <Frame BackgroundColor="#303030" CornerRadius="12" HasShadow="True">
                    <ListView ItemsSource="{Binding InventoryRecords}" BackgroundColor="Transparent" SeparatorVisibility="None">
                        <ListView.Header>
                            <StackLayout Orientation="Horizontal" Padding="10" BackgroundColor="#404040">
                                <Label Text="Batch" TextColor="#FFFFFF" FontAttributes="Bold" WidthRequest="60" />
                                <Label Text="Date" TextColor="#FFFFFF" FontAttributes="Bold" WidthRequest="80" />
                                <Label Text="Bought" TextColor="#FFFFFF" FontAttributes="Bold" WidthRequest="60" />
                                <Label Text="Damaged" TextColor="#FFFFFF" FontAttributes="Bold" WidthRequest="60" />
                                <Label Text="Sold" TextColor="#FFFFFF" FontAttributes="Bold" WidthRequest="60" />
                            </StackLayout>
                        </ListView.Header>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <StackLayout Orientation="Horizontal" Padding="10" Spacing="10" BackgroundColor="#303030">
                                        <Label Text="{Binding InventoryNumber}" TextColor="#FFFFFF" WidthRequest="60" />
                                        <Label Text="{Binding Date, StringFormat='{0:dd/MM/yyyy}'}" TextColor="#FFFFFF" WidthRequest="80" />
                                        <Label Text="{Binding NumberOfTraysBought}" TextColor="#FFFFFF" WidthRequest="60" />
                                        <Label Text="{Binding NumberOfDamagedTrays}" TextColor="#FFFFFF" WidthRequest="60" />
                                        <Label Text="{Binding NumberOfTraysSold}" TextColor="#FFFFFF" WidthRequest="60" />
                                    </StackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Frame>

                <!-- Input Fields -->
                <StackLayout Spacing="10">
                    <Frame BackgroundColor="#303030" CornerRadius="12" Padding="10" HasShadow="True">
                        <Entry Placeholder="Number of Trays Bought" 
                               Text="{Binding NumberOfTraysBought, Mode=TwoWay}" 
                               Keyboard="Numeric" 
                               PlaceholderColor="#B0B0B0"
                               TextColor="#FFFFFF" />
                    </Frame>

                    <Frame BackgroundColor="#303030" CornerRadius="12" Padding="10" HasShadow="True">
                        <Entry Placeholder="Number of Damaged Trays" 
                               Text="{Binding NumberDamagedTrays, Mode=TwoWay}" 
                               Keyboard="Numeric" 
                               PlaceholderColor="#B0B0B0"
                               TextColor="#FFFFFF" />
                    </Frame>

                    <Frame BackgroundColor="#303030" CornerRadius="12" Padding="10" HasShadow="True">
                        <Entry Placeholder="Number of Trays Sold" 
                               Text="{Binding NumberOfTraysSold, Mode=TwoWay}" 
                               Keyboard="Numeric" 
                               PlaceholderColor="#B0B0B0"
                               TextColor="#FFFFFF" />
                    </Frame>

                    <Label Text="Date:" TextColor="#D5F8B0" FontSize="16" />
                    <DatePicker x:Name="DateEntry" 
                                Date="{Binding Date, Mode=TwoWay}" 
                                TextColor="#FFFFFF" />
                </StackLayout>

                <!-- Save Button -->
                <Button Text="Save Inventory"
                        Command="{Binding SaveInventoryCommand}"
                        TextColor="#FFFFFF" 
                        BackgroundColor="#D5F8B020" 
                        CornerRadius="25" 
                        HeightRequest="50" 
                        FontSize="16" 
                        FontAttributes="Bold" />
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
